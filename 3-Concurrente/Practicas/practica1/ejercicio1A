programa ejercicio1
procesos
  proceso juntarFlores(ES cant: numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cant:= cant + 1 
  fin
  proceso depositarFlores
  comenzar
    mientras(HayFlorEnLaBolsa)
      depositarFlor
  fin
  proceso juntar
  variables
    cant: numero
  comenzar
    repetir 99
      juntarFlores(cant)
      mover
    depositarFlores
    Informar(cant)
  fin
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  comenzar
    Pos(1,1)
    juntar
    Pos(2,1)
    juntar
    Pos(3,1)
    juntar
  fin
variables
  r1: robot1
comenzar
  AsignarArea(r1,ciudad)
  Iniciar(r1,1,1)
fin
