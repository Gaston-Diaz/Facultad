programa parcial1
procesos
  proceso juntarFlores(ES cant:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cant:= cant + 1
  fin
  proceso juntarPapeles(ES cant:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      cant:= cant + 1
  fin
areas
  areaF: AreaP(14,6,14,6)
  Area1: AreaPC(3,3,13,13)
  Area2: AreaPC(16,3,26,13)
robots
  robot tipo1
  variables
    id:numero
    cant:numero
  comenzar
    cant:= 0
    RecibirMensaje(id,fisca)
    repetir 10
      juntarFlores(cant)
      mover
    derecha
    repetir 10
      juntarFlores(cant)
      mover
    EnviarMensaje(id,fisca)
    EnviarMensaje(cant,fisca)
  fin
  robot tipo2
  variables
    id:numero
    cant: numero
  comenzar
    cant:=0
    RecibirMensaje(id,fisca)
    repetir 2
      derecha
    repetir 10
      juntarPapeles(cant)
      mover
    derecha
    repetir 10
      juntarPapeles(cant)
      mover
    EnviarMensaje(id,fisca)
    EnviarMensaje(cant,fisca)
  fin
  robot tipo3
  variables
    e1:numero
    e2:numero
    ganador:numero
    cant:numero
    aux:numero
    id:numero
  comenzar
    e1:= 0
    e2:= 0
    cant:= 0
    EnviarMensaje(1,f1)
    EnviarMensaje(2,f2)
    EnviarMensaje(3,p1)
    EnviarMensaje(4,p2)
    repetir 4
      RecibirMensaje(id,*)
      si(id = 1)
        RecibirMensaje(aux,f1)
        e1:= e1 + 1
        cant:= cant + aux
      sino
        si(id = 2)
          RecibirMensaje(aux,f2)
          e1:= e1 + 1
          cant:= cant + aux
        sino
          si(id = 3)
            RecibirMensaje(aux,p1)
            e2:= e2 + 1
            cant:= cant + aux
          sino
            RecibirMensaje(aux,p2)
            e2:= e2 + 1
            cant:= cant + aux
      si(e1 = 2)
        ganador:= 1
      sino
        si(e2 = 2)
          ganador:= 2
    si(ganador = 1)
      Informar('ganador',2)
    sino
      Informar('ganador',1)
    Informar('total',cant)
  fin
variables
  f1: tipo1
  f2: tipo1
  p1: tipo2
  p2: tipo2
  fisca: tipo3
comenzar
  AsignarArea(f1,Area1)
  AsignarArea(f2,Area2)
  AsignarArea(p1,Area1)
  AsignarArea(p2,Area2)
  AsignarArea(fisca,areaF)
  Iniciar(f1,3,3)
  Iniciar(f2,16,3)
  Iniciar(p1,13,13)
  Iniciar(p2,26,13)
  Iniciar(fisca,14,6)
fin