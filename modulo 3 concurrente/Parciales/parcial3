programa parcial3
procesos
  proceso juntarFlores(ES cant:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cant:= cant + 1  
  fin
  proceso cuadrado(E lado:numero; ES av: numero; ES ca:numero,ES cant:numero)
  comenzar
    repetir lado
      juntarFlores(cant)
      mover
    derecha
    av:= PosAv
    ca:= PosCa
    repetir 3
      repetir lado
        juntarFlores(cant)
        mover
      derecha
  fin
areas
  area1: AreaP(1,1,7,100)
  area2: AreaP(8,1,14,100)
  area3: AreaP(15,1,21,100)
  areac: AreaP(51,1,51,1)
  deposito: AreaPC(50,50,50,50)
robots
  robot tipo1
  variables
    id:numero
    lado:numero
    av:numero
    ca:numero
    ok: boolean
    cant:numero
  comenzar
    cant:= 0
    RecibirMensaje(id,cordi)
    repetir 5
      Random(lado,1,5)
      cuadrado(lado,av,ca,cant)
      ca:= ca + 1
      Pos(av,ca)
      si(id = 1)
        EnviarMensaje(V,r2)
        EnviarMensaje(V,r3)
      sino
        si(id = 2)
          EnviarMensaje(V,r1)
          EnviarMensaje(V,r3)
        sino
          EnviarMensaje(V,r1)
          EnviarMensaje(V,r2)
      repetir 2
        RecibirMensaje(ok,*)
    repetir cant
      BloquearEsquina(50,50)
      Pos(50,50)
      depositarFlor
      Pos(av,ca)
      LiberarEsquina(50,50)
  fin
  robot tipo2
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1: tipo1
  r2: tipo1
  r3: tipo1
  cordi: tipo2
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r1,deposito)
  AsignarArea(r2,area2)
  AsignarArea(r2,deposito)
  AsignarArea(r3,area3)
  AsignarArea(r3,deposito)
  AsignarArea(cordi,areac)
  Iniciar(cordi,51,1)
  Iniciar(r1,1,1)
  Iniciar(r2,8,1)
  Iniciar(r3,15,1)
fin