programa ejercicio3
procesos
  proceso recogerPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso recogerFlores
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot tipo1
  comenzar
    derecha
    repetir 10
       recogerFlores
       mover
  fin
variables
  A1: tipo1
  A2: tipo1
  B1: tipo2
  B2: tipo2
comenzar
  AsignarArea(A1,ciudad)
  AsignarArea(A2,ciudad)
  AsignarArea(B1,ciudad)
  AsignarArea(B2,ciudad)
  Iniciar(A1,1,1)
  Iniciar(A2,1,10)
  Iniciar(B1,1,5)
  Iniciar(B2,1,10)
fin