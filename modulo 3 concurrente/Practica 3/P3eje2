programa ejercicio2p3
procesos
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin
  proceso arribaI
  comenzar
    repetir 3
      derecha
  fin
  proceso juntarFlores
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso escalon1(ES m:numero)
  comenzar
    mientras(m >= 1) 
      repetir m
        juntarFlores
        mover
      derecha
      repetir m
        juntarFlores
        mover
      arribaI
      m:= m - 1 
  fin
  proceso escalon2(E m:numero)
  comenzar
    mientras(m <= 5) 
      repetir m
        juntarFlores
        mover
      derecha
      repetir m
        juntarFlores
        mover
      arribaI
      m:= m + 1 
  fin
  proceso escalon3(ES n:numero)
  comenzar
    mientras(n >= 1) 
      repetir n
        juntarPapeles
        mover
      izquierda
      repetir n
        juntarPapeles
        mover
      derecha
      n:= n - 1 
  fin
  proceso escalon4(E n:numero)
  comenzar
    mientras(n<=5)
      repetir n
        juntarPapeles
        mover
      repetir 3
        derecha
      repetir n
        juntarPapeles
        mover
      derecha
      n:= n + 1
  fin
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot tipo1
  variables
    m:numero
  comenzar
    m:= 5
    escalon1(m)
    BloquearEsquina(16,16)
    izquierda
    escalon2(m)
    LiberarEsquina(16,16)
  fin
  robot tipo2
  variables
    n:numero
  comenzar
    n:= 5
    escalon3(n)
    BloquearEsquina(16,16)
    derecha
    escalon4(n)
    LiberarEsquina(16,16)
  fin
  robot tipo3
  variables
    id:numero
    ganador:numero
  comenzar
    Pos(100,100) 
  fin
variables
  robot1:tipo1
  robot2:tipo2
  robot3:tipo3
comenzar
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot3,15,1)
  Iniciar(robot1,1,1)
  Iniciar(robot2,31,1)
fin