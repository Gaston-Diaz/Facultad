programa ejercicio2p3
procesos
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin
  proceso arribaI
  comenzar
    repetir 3
      derecha
  fin
  proceso juntarFlores
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso escalon1(ES m:numero)
  comenzar
    mientras(m >= 1) 
      repetir m
        mover
      derecha
      repetir m
        mover
      arribaI
      m:= m - 1 
  fin
    proceso escalon2(E m:numero)
  comenzar
    mientras(m <= 5) 
      repetir m
        mover
      derecha
      repetir m
        mover
      arribaI
      m:= m - 1 
  fin

areas
  ciudad: AreaC(1,1,100,100)
robots
  robot tipo1
  variables
    m:numero
  comenzar
    m:= 5
    escalon1(m)
    izquierda
    escalon2(m)
    Informar(PosAv)
    Informar(PosCa)
  fin
variables
  robot1:tipo1
comenzar
  AsignarArea(robot1,ciudad)
  Iniciar(robot1,1,1)
fin