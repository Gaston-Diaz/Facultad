programa ejer1p4
procesos
  proceso irADepositar(E av:numero;E ca:numero; E cant:numero)
  comenzar
    Pos(av,ca)
    repetir cant
      depositarFlor
    Pos(5,2)
    LiberarEsquina(av,ca)
  fin
areas
  area4: AreaC(4,1,6,3)
  area1: AreaC(1,1,1,100)
  area2: AreaC(2,1,2,100)
  area3: AreaC(3,1,3,100)
robots
  robot tipo1
  variables
    id: numero
    av: numero
    ca: numero
    cant: numero
    ok: boolean
    aux:numero
  comenzar
    av:= PosAv
    ca:= PosCa + 1 
    RecibirMensaje(id,r4)
    mientras(ca < 100) 
      Random(cant,1,4)
      aux:= ca + cant
      si(aux > 100)
        Informar(aux)
        ca:= 100
        EnviarMensaje(id,r4)
        EnviarMensaje(0,r4)
      sino
        EnviarMensaje(id,r4)
        EnviarMensaje(cant,r4)
        EnviarMensaje(av,r4)
        EnviarMensaje(ca,r4)
        RecibirMensaje(ok,r4)
        Pos(av,ca)
        mientras(HayFlorEnLaEsquina)
          tomarFlor
        mientras(HayFlorEnLaBolsa)
          depositarFlor
          mover
        ca:= PosCa + 1
  fin
  robot tipo2
  variables
    f: numero
    id: numero
    cant: numero
    av: numero
    ca: numero
    aux: numero
  comenzar
    aux:= 0
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    mientras(aux < 3)
      RecibirMensaje(id,*)
      si(id = 1)
        RecibirMensaje(cant,r1)
        si(cant = 0)
          aux:= aux + 1
        sino
          RecibirMensaje(av,r1)
          RecibirMensaje(ca,r1)
          BloquearEsquina(av,ca)
          irADepositar(av,ca,cant)
          EnviarMensaje(V,r1)
      sino
        si(id = 2)
          RecibirMensaje(cant,r2)
          si(cant = 0)
            aux:= aux + 1
          sino
            RecibirMensaje(av,r2)
            RecibirMensaje(ca,r2)
            BloquearEsquina(av,ca)
            irADepositar(av,ca,cant)
            EnviarMensaje(V,r2)
        sino
          RecibirMensaje(cant,r3)
          si(cant = 0)
            aux:= aux + 1
          sino
            RecibirMensaje(av,r3)
            RecibirMensaje(ca,r3)
            BloquearEsquina(av,ca)           
            irADepositar(av,ca,cant)
            EnviarMensaje(V,r3)
    Informar(aux)
  fin
variables
  r1: tipo1
  r2: tipo1
  r3: tipo1
  r4: tipo2
comenzar
  AsignarArea(r4,area4)
  AsignarArea(r4,area1)
  AsignarArea(r4,area2)
  AsignarArea(r4,area3)
  AsignarArea(r1,area1)
  AsignarArea(r2,area2)  
  AsignarArea(r3,area3)
  Iniciar(r4,5,2)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin