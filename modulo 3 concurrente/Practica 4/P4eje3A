programa ejer3AP4
procesos
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
areas
  areaR1: AreaP(1,1,1,100)
  areaR2: AreaP(2,1,2,100)
  areaR3: AreaP(3,1,3,100)
  areaR4: AreaP(4,1,4,1)
robots
  robot tipo1
  variables
    id: numero
    barrera: numero
  comenzar
    RecibirMensaje(id,coor)
    barrera:= 0
    repetir 99
      juntarPapeles
      mover
      si
    juntarPapeles
  fin
  robot tipo2
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1: tipo1
  r2: tipo1
  r3: tipo1
  coor: tipo2
comenzar
  AsignarArea(r1,areaR1)
  AsignarArea(r2,areaR2)
  AsignarArea(r3,areaR3)
  AsignarArea(coor,areaR4)
  Iniciar(coor,4,1)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin